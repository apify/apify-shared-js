{
    "name": "apify-shared",
    "private": true,
    "version": "0.0.0",
    "description": "Tools and constants shared across Apify projects.",
    "main": "build/index.js",
    "types": "types/index.d.ts",
    "keywords": [
        "apify"
    ],
    "author": {
        "name": "Apify",
        "email": "support@apify.com",
        "url": "https://apify.com"
    },
    "contributors": [
        "Jan Curn <jan@apify.com>",
        "Marek Trunk√°t <marek@apify.com>"
    ],
    "license": "Apache-2.0",
    "workspaces": [
        "packages/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/apify/apify-shared-js"
    },
    "bugs": {
        "url": "https://github.com/apify/apify-shared-js/issues"
    },
    "homepage": "https://apify.com",
    "scripts": {
        "postinstall": "npx husky install",
        "prepublishOnly": "npx lerna run copy",
        "clean": "lerna run clean",
        "build": "lerna run build",
        "test": "jest --silent",
        "test-cov": "jest --coverage",
        "release": "npm run build && lerna version patch && lerna publish from-package --contents dist",
        "lint": "eslint packages/*/src test",
        "lint:fix": "eslint packages/*/src test --fix"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint packages/*/src/**/*.ts --fix"
        ]
    },
    "devDependencies": {
        "@apify/eslint-config-ts": "^0.1.2",
        "@commitlint/config-conventional": "^12.1.1",
        "@types/git-url-parse": "^9.0.0",
        "@types/jest": "^26.0.23",
        "@types/marked": "^2.0.2",
        "@types/node": "^15.6.1",
        "@types/request": "^2.48.5",
        "@types/underscore": "^1.11.2",
        "@typescript-eslint/eslint-plugin": "^4.22.1",
        "@typescript-eslint/parser": "^4.22.1",
        "clone-deep": "^4.0.1",
        "commitlint": "^12.1.1",
        "deploy-web-to-s3": "^1.3.0",
        "eslint": "^7.25.0",
        "husky": "^7.0.0",
        "jest": "^27.0.4",
        "lerna": "^4.0.0",
        "lint-staged": "^11.0.0",
        "marked": "^2.0.3",
        "nock": "^13.0.7",
        "strip-ansi": "^7.0.0",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.0.0",
        "typescript": "^4.2.4",
        "underscore": "^1.13.1"
    }
}
