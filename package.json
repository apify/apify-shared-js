        "deploy-web-to-s3": "^1.3.1",
        "eslint": "^8.50.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lerna": "^5.0.0",
        "lint-staged": "^14.0.0",
        "marked": "^9.0.0",
        "nock": "^13.3.3",
        "strip-ansi": "^6.0.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsup": "^7.2.0",
        "typescript": "^5.2.2",
        "underscore": "^1.13.6"
    },
    "packageManager": "npm@10.1.0"
